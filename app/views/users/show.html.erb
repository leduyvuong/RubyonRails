<% provide(:title, @user.name) %>
<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
            <h1>
            <%= gravatar_for @user %>
            <%= @user.name %>
            </h1>
        </section>
        <section class="stats">
          <%= render 'shared/stats' %>
          <%= render "follow_form" %>
        </section>
        
      </aside>
    <div class="col-md-8">
        
        <% if @user.microposts.any? %>
            <h3>Microposts (<%= @user.microposts.count %>)</h3>
            <ol class="microposts">
                <%= render @microposts %>
            </ol>
            <%= will_paginate @microposts,  :previous_label => t("labelw.prev_label"), :next_label => t("labelw.next_label") %>
        <% end %>
    </div>
</div>